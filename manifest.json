{
  "manifest_version": 3,
  "name": "收藏到就是学到",
  "version": "1.0.0",
  "description": "自动总结你在 X 上收藏的内容，让每次收藏都变成学习",
  "permissions": [
    "storage",
    "scripting",
    "downloads",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.moonshot.cn/*",
    "https://open.bigmodel.cn/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "收藏到就是学到 - 设置"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/icon48.png"],
      "matches": ["https://x.com/*", "https://twitter.com/*"]
    }
  ]
}
